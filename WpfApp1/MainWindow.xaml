<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox x:Name="CityComboBox" Width="200" Margin="0,0,0,10" SelectionChanged="CityComboBox_SelectionChanged"/>
            <ComboBox x:Name="PlantComboBox" Width="200" Margin="0,0,0,10" SelectionChanged="PlantComboBox_SelectionChanged"/>
            <ComboBox x:Name="EmployeeComboBox" Width="200" Margin="0,0,0,10"/>
            <ComboBox x:Name="BrigadeComboBox" Width="200" Margin="0,0,0,10"/>
            <TextBox x:Name="ShiftTextBox" Width="200" Margin="0,0,0,10" Text="Смена"/>
        </StackPanel>
    </Grid>
</Window>
